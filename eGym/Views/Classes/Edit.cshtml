@model eGym.Models.ClassesModel
@{
    ViewData["Title"] = "Edit a classes";
}
<h1 class="display-4">Edit a classes</h1>

<hr />
<br />
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <input type="hidden" class="input" asp-for="Id">
            <input type="hidden" class="input" asp-for="GymId">
            <input type="hidden" class="input" asp-for="EmployeeId">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Gym</label>
                <input class="form-control" value="@ViewBag.Gym" readonly/>
            </div>
            <div class="form-group">
                <label class="control-label">Trainer</label>
                <input class="form-control" value="@ViewBag.Trainer" readonly />
            </div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Number of people</label>
                <input asp-for="NumberOfPeople" class="form-control" />
                <span asp-validation-for="NumberOfPeople" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Start date</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">End date</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a href="/Classes/MyClassesList?id=@Html.DisplayFor(model => model.EmployeeId)" class="btn btn-dark">Trainer's Classes</a>
                <a href="/Classes/GymsClassesList?id=@Html.DisplayFor(model => model.GymId)" class="btn btn-primary">Gym's Classes</a>
                <input type="submit" value="Edit" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}