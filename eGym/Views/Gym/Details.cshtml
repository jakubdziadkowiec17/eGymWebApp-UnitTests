@model eGym.Models.GymModel
@{
    ViewData["Title"] = "Gym details";
    bool Admin = User.IsInRole("admin");
}
<style>
    .map-container
    {
        position: relative;
        overflow: hidden;
    }
    .gym-details
    {
        padding-right: 20px;
    }
</style>

<h1 class="display-4">Gym details</h1>
<hr />
<div class="row">
    <div class="col-sm-6 gym-details">
        <dl class="row">
            @if (Admin)
            {
                <dt class="col-sm-2">
                    <label>Id</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
            }
            <dt class="col-sm-2">
                <label>Name</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.GymName)
            </dd>
            <dt class="col-sm-2">
                <label>Locality</label>
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Locality)
            </dd>
            <dt class="col-sm-2">
                <label>Opening hours</label>
            </dt>
            <dd class="col-sm-10">
                <pre class="card-text">@Html.DisplayFor(model => model.OpeningHours)</pre>
            </dd>
            @if (Admin)
            {
                <dt class="col-sm-2">
                    <label>Created date</label>
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.CreatedDate)
                </dd>
            }
        </dl>
    </div>
    <div class="col-sm-6">
            <div class="map-container">
                @Html.Raw(Model.Map)
            </div>
    </div>
</div>
<div class="form-group">
    <a class="btn btn-dark" asp-controller="Gym" asp-action="GymList">Gym list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}