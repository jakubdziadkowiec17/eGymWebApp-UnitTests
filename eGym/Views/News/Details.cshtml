@model eGym.Models.NewsModel
@{
    ViewData["Title"] = "News details";
}
<h1 class="display-4">News details</h1>

<hr />
<br />
<br />
<div class="row">
    <dl class="row">
        <dt class="col-sm-2">
            <label>Title</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class="col-sm-2">
            <label>Content</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Content)
        </dd>
        <dt class="col-sm-2">
            <label>Active</label>
        </dt>
        <dd class="col-sm-10">
            @if (Model.Active)
            {
                <span>Yes</span>
            }
            else
            {
                <span>No</span>
            }
        </dd>
        <dt class="col-sm-2">
            <label>Created date</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CreatedDate)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a class="btn btn-dark" asp-controller="News" asp-action="NewsList">News list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}