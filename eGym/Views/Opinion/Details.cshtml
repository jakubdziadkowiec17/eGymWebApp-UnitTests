@model eGym.Models.OpinionModel
@{
    ViewData["Title"] = "Opinion details";
}
<h1 class="display-4">Opinion details</h1>

<hr />
<br />
<br />
<div class="row">
    <dl class="row">
        <dt class="col-sm-2">
            <label>User</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            <label> Gym</label>
        </dt>
        <dd class="col-sm-10">
            @ViewBag.Gym
        </dd>
        <dt class="col-sm-2">
            <label>Rating</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Rating)
        </dd>
        <dt class="col-sm-2">
            <label>Comment</label>
        </dt>
        <dd class="col-sm-10">
            <pre class="card-text">@Html.DisplayFor(model => model.Comment)</pre>
        </dd>
        <dt class="col-sm-2">
            <label>Opinion Date</label>
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OpinionDate)
        </dd>
    </dl>
</div>
<div class="form-group">
    <a href="/Opinion/OpinionList?id=@Html.DisplayFor(model => model.GymId)" class="btn btn-dark">Back to Opinion list</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}