@{
    ViewData["Title"] = "Report of opinions expressed";
}
<div class="row">
<div class="text-center">
        <h1 class="display-3">Report of opinions expressed</h1>
</div>
    <p>&nbsp;</p>@ViewBag.Start - @ViewBag.End<p>&nbsp;</p>
    <div class="table-responsive">
    <table class="table table-bordered table-rounded">
    <thead>
        <tr>
            <th>
                Gym
            </th>
            <th>
                    Count
            </th>
                <th>
                    Average rating
                </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
                <tr>
                    <td>@item.Gym</td>
                    <td>@item.Count</td>
                    <td>@(item.Avg!=null?item.Avg:"0")/5</td>
                </tr>
        }
    </tbody>
</table>
</div>
</div>