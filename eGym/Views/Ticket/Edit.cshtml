@model eGym.Models.TicketModel
@{
    ViewData["Title"] = "Edit a ticket";
}
<h1 class="display-4">Edit a ticket</h1>

<hr />
<br />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Update">
            <input type="hidden" class="input" asp-for="Id">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Name</label>
                <input asp-for="TicketName" class="form-control" />
                <span asp-validation-for="TicketName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Reduced ticket</label>
                <div class="form-check form-switch">
                    <input asp-for="ReducedTicket" class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" />
                    <span asp-validation-for="ReducedTicket" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group">
                <label class="control-label">Number of days</label>
                <input asp-for="NumberOfDays" class="form-control" />
                <span asp-validation-for="NumberOfDays" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Price [zł]</label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a class="btn btn-dark" asp-controller="Ticket" asp-action="TicketList">Ticket list</a>
                <input type="submit" value="Edit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}