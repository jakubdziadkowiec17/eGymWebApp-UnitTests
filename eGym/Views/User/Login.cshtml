@model eGym.Models.LoginModel
@{
    ViewData["Title"] = "Log in";
}
<h1 class="display-4 text-center">Log in</h1>

<hr />

<div class="container d-grid justify-content-center mt-4">
    <div class="row">
        <div class="col-12 d-grix justify-content-center align-items-center">
            <form asp-action="Login">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Username</label>
                    <input asp-for="Username" class="form-control" />
                    <span asp-validation-for="Username" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Password</label>
                    <input asp-for="Password" type="password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>             
                
                 <input type="submit" value="Log in" class="btn btn-success mt-3 mb-3 d-block mx-auto" />     
                 
            </form>
        </div>
    </div>

    <row class="mt-5 d-grid justify-content-center">
        <a type="button" class="btn btn-outline-primary asp-controller="User" asp-action="Register">Sign up</a>
        <p>You have no account yet?</p>
    </row>
   
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}